@model NBasketball.Models.Player

@{
    ViewData["Title"] = "Добавить игрока";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Добавить игрока</h1>

<form id="addPlayerForm" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Имя</label>
        <input type="text" class="form-control" id="Name" name="Name" />
        <span class="validation-message" id="NameError"></span>
    </div>
    <div class="form-group">
        <label for="Position">Позиция</label>
        <select class="form-control" id="Position" name="Position">
            <option value="">Выберите позицию</option>
            <option value="Нападающий">Нападающий</option>
            <option value="Форвард">Форвард</option>
            <option value="Защитник">Защитник</option>
            <option value="Центровой">Центровой</option>
        </select>
        <span class="validation-message" id="PositionError"></span>
    </div>
    <div class="form-group">
        <label for="TeamId">Команда</label>
        <select class="form-control" id="TeamId" name="TeamId">
            <option value="">Выберите команду</option>
            @foreach (var team in ViewBag.Teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
        <span class="validation-message" id="TeamIdError"></span>
    </div>
    <div class="form-group">
        <label for="imageFile">Фото игрока</label>
        <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" />
        <span class="validation-message" id="ImageFileError"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить игрока</button>
</form>

<div id="addPlayerMessage" class="alert" style="display: none; margin-top: 20px;"></div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#addPlayerForm").on("submit", function (e) {
                e.preventDefault();

                // Очищаем предыдущие сообщения об ошибках
                $(".validation-message").text("");
                $("#addPlayerMessage").hide();

                var formData = new FormData(this);

                $.ajax({
                    url: "/Home/AddPlayerAjax",
                    type: "POST",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $("#addPlayerMessage")
                                .removeClass("alert-danger")
                                .addClass("alert-success")
                                .text(response.message)
                                .show();
                            $("#addPlayerForm")[0].reset();
                        } else {
                            $("#addPlayerMessage")
                                .removeClass("alert-success")
                                .addClass("alert-danger")
                                .text(response.message)
                                .show();
                            if (response.errors) {
                                response.errors.forEach(function (error) {
                                    if (error.toLowerCase().includes("имя")) $("#NameError").text(error);
                                    if (error.toLowerCase().includes("позиция")) $("#PositionError").text(error);
                                    if (error.toLowerCase().includes("команда")) $("#TeamIdError").text(error);
                                    if (error.toLowerCase().includes("фото")) $("#ImageFileError").text(error);
                                });
                            }
                        }
                    },
                    error: function (xhr, status, error) {
                        $("#addPlayerMessage")
                            .removeClass("alert-success")
                            .addClass("alert-danger")
                            .text("Произошла ошибка при отправке формы: " + error)
                            .show();
                    }
                });
            });
        });
    </script>
}

<style>
    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .validation-message {
        color: #dc3545; /* Красный цвет для ошибок */
        font-size: 0.9rem;
        display: block !important; /* Убедимся, что элемент всегда виден */
        margin-top: 0.25rem;
        min-height: 1.2rem; /* Зарезервировать место под сообщение */
        opacity: 1;
        transition: opacity 0.3s ease-in-out;
    }

        .validation-message:empty {
            opacity: 0; /* Скрываем пустые сообщения */
        }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
        padding: 10px;
        border-radius: 4px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 4px;
    }
</style>